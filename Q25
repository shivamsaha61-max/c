#include <stdio.h>

int main()
{
    float unit;
    printf("Enter the number of units of electricity consumed by the consumer:");
    scanf("%f",&unit);
    if(unit<=100){
        printf("\nThe bill is:%f",unit*2);
    }
    else if(unit<=300){
        printf("\nThe bill is%f",unit*3);
    }
    else if(unit>=300){
        printf("\nThe bill is:%f",unit*4*2.5);
    }
   

    return 0;
}
